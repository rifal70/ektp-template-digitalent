<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.buatKTP.RegisterSuccessfulKTPActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_checklist"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengajuan KTP anda \nberhasil dikirim"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/dark1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan cek berkala pada menu lacak pembuatan KTP untuk mengetahui proses pembuatan KTP anda."
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/btn_track"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:background="@drawable/round_border_transparent"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lacak"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textColor="@color/blue_main"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_close"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:background="@drawable/round_border_blue"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btn_track"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutup"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>