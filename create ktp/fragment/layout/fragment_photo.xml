<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.buatKTP.PhotoFragment"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:background="@drawable/round_border_soft"
        android:backgroundTint="@color/white_soft">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <TextView
                android:id="@+id/tv_fotocard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contoh Foto untuk KTP"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:textColor="@color/gray5"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_fotocard"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_person1"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_person2"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Upload foto anda dengan berpakaian rapih dan sopan
dengan ukuran 3x4 / 4x6 / 2x3. Untuk penduduk yang
lahir pada tahun ganjil latar belakang pas photo berwarna merah dan untuk penduduk yang lahir pada tahun genap
latar belakang pas photo berwarna biru."
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"/>

    <TextView
        android:id="@+id/tv_syarat_ketentuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pastikan foto jelas dan memenuhi Syarat &amp; Ketentuan untuk pembuatan KTP"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"/>

    <LinearLayout
        android:id="@+id/btn_uploadfoto"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/round_border_blue"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_filled"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unggah File"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>
    </LinearLayout>


</LinearLayout>