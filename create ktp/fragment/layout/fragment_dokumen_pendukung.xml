<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.buatKTP.DokumenPendukungFragment"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Scan Kartu Keluarga"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/gray5"
            android:gravity="left|top"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#F2F2F2"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/btn_uploadkk"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/round_border_blue"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_filled"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unggah File"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Surat Pengantar RT/RW"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/gray5"
            android:gravity="left|top"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#F2F2F2"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/btn_uploadrtrw"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/round_border_blue"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_filled"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unggah File"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>