<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegistrationSuccessActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_checklist"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat pendaftaran anda \nberhasil!"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/dark1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/btn_tutup"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:background="@drawable/round_border_transparent"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutup"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textColor="@color/blue_main"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_masuk"
            android:layout_width="165dp"
            android:layout_height="65dp"
            android:text="Konfirmasi"
            android:layout_toRightOf="@id/btn_tutup"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:backgroundTint="@color/blue_main"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>