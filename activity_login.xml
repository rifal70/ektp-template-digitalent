<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_maskgroup_login"/>

        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo2"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat datang!"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/dark1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan login untuk dapat mengakses \nE-KTP Online"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="@color/grey5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email / No. Handphone"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/grey2"/>

        <EditText
            android:id="@+id/et_email_nohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Email Atau No. Handphone Anda"
            android:inputType="textEmailAddress|textCapSentences"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            android:textColorHint="@color/grey3"
            android:layout_marginTop="5dp"
            android:paddingTop="12dp"
            android:paddingLeft="16dp"
            android:paddingBottom="12dp"
            android:background="@drawable/round_border_soft"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/grey2"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:textColorHint="@color/grey3"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/et_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan Password Anda"
                android:textSize="14sp"
                android:textColorHint="@color/grey3"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="5dp"
                android:paddingTop="12dp"
                android:paddingLeft="16dp"
                android:paddingBottom="12dp"
                android:background="@drawable/round_border_soft" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Password?"
        android:layout_gravity="right"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/blue_main"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="@color/blue_main"
        android:layout_marginTop="17dp"
        android:text="Masuk"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/round_border"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Belum Punya akun? silahkan "
            android:textSize="12sp"
            android:textColor="@color/dark1"
            android:fontFamily="@font/poppins_regular"/>
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="daftar disini"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textColor="@color/yellow_main"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Atau  "/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk menggunakan email"
        android:textSize="12sp"
        android:textColor="@color/dark1"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/btn_signup_google"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_border_soft"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_google"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_google"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tv_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk dengan gmail"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/dark2" />
    </LinearLayout>



</LinearLayout>