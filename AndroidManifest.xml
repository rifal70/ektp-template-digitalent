        <activity
            android:name=".view.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".view.RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
