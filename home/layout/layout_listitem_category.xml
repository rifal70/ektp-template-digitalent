<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="275dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="258dp"
        android:layout_height="267dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:backgroundTint="@color/white"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat KTP Baru"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/blue_main"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="14dp"/>

            <ImageView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_line2"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_cardtitle"/>

            <TextView
                android:id="@+id/tv_carddesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sed vel turpis adipiscing penatibus orci neque. Erat sed fermentum ipsum vel quis quam. Nunc etiam dui tortor, non in aliquam lacinia tempor."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/dark2"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_below="@id/tv_cardtitle"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btn_cardview"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:backgroundTint="@color/blue_main"
                android:text="Buat KTP Baru"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>