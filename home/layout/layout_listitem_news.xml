<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="355dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="258dp"
        android:layout_height="347dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:backgroundTint="@color/white"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Pembuatan KTP"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/blue_main"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="14dp"/>

            <TextView
                android:id="@+id/tv_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rabu, 20 Mei 2020"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/dark2"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_below="@id/tv_cardtitle"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:id="@+id/tv_carddesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sed vel turpis adipiscing penatibus orci neque. Erat sed fermentum ipsum vel quis quam. Nunc etiam dui tortor, non in aliquam lacinia tempor."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/dark2"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_below="@id/tv_cardtitle"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_readmore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Read More"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:textColor="@color/yellow_main"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>