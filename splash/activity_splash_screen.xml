<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SplashScreenActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:background="@drawable/bg_splashscreen"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_maskgroup_splashscreen"
            android:alpha="0.4"/>

        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="177dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cepat, Mudah, &amp; Transparant"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ic_logo"
            android:layout_marginTop="50dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Powered by"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_logo_of_the_ministry_of_home_affairs_ri"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kementerian Dalam Negeri"
                android:fontFamily="@font/poppins_medium"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/blue_main"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:text="Republik Indonesia"
                android:fontFamily="@font/poppins_medium"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/yellow_main"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
